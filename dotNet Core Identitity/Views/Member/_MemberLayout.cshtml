<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    

    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bodybody.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Member">Üye Ana Sayfası</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info mr-1" asp-action="Index" asp-controller="Admin">Admin Ana Sayfası</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info mr-1" asp-action="Editor" asp-controller="Member">Editor Ana Sayfası</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info mr-1" asp-action="Manager" asp-controller="Member">Manager Ana Sayfası</a>
                    </li>
                </ul>

            </div>
        </div>

    </nav>
    <div class="container" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a class="btn btn-danger btn-block" asp-action="istanbulPage" asp-controller="Member">istanbul Sayfası</a>
                <a class="btn btn-danger btn-block" asp-action="ViolencePage" asp-controller="Member">Şiddet içeren Sayfa</a>
                <a class="btn btn-danger btn-block" asp-action="ExchangeRedict" asp-controller="Member">Borsa Bilgileri</a>
                <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştirme</a>
                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Bilgi Güncelleme</a>
                <a class="btn btn-success btn-block" asp-action="TwoFactorAuth" asp-controller="Member">İkili Adımlı Kimlik Doğrulama</a>
                <a class="btn btn-info btn-block" asp-action="LogOut" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/qrcode/qrcode.js"></script>
    @RenderSection("Scripts",required:false) 
</body>
</html>
