@model dotNet_Core_Identitity.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-md-4 offset-md-4">

        @if (ViewBag.status == "succsess")
        {
            <div class="alert alert-info">Şifre yenileme linki e-postası adresinize gönderilmiştir<br />E-postanızı kontrol ediniz.</div>
        }
        else
        {
            <form asp-action="ResetPassword">
                <h4>Şifremi Unuttum</h4>
                <hr />
                <div class="alert alert-info">
                    Yeni Şifre Belirlemek için Kayıtlı e-posta adresinizi yazınız.<br />
                    Şifre Değiştirme linkini e-posta adresinize göndereceğiz.
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gönder" class="btn btn-primary" />
                </div>
            </form>
        }


    </div>
</div>


